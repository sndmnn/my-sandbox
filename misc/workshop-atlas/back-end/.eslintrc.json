{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": "off",
        "class-methods-use-this": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "lines-between-class-members": "off",
        "prefer-destructuring": [
            "error", 
            {
                "array": true,
                "object": false
            }, 
            {
                "enforceForRenamedProperties": false
            }
        ],
        "quote-props": [
            "error", 
            "consistent"
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never",
              "js": "never"
            }
        ],
        "linebreak-style": 0
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
